<Window x:Class="WPF_NotifyProperty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_NotifyProperty"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="30">
        <Label Name="lbName" Content="{Binding Name}"/>
        <Label Name="lbLastName" Content="{Binding LastName}"/>
        <Button Width="100" Click="Button_Click" Content="ChangeName"/>
    </StackPanel>
</Window>
